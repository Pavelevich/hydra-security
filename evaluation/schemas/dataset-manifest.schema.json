{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hydra-security.dev/evaluation/schemas/dataset-manifest.schema.json",
  "title": "Hydra Evaluation Dataset Manifest",
  "type": "object",
  "required": [
    "schema_version",
    "dataset_id",
    "description",
    "created_at",
    "repos"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "dataset_id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date"
    },
    "repos": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "path", "language", "framework", "expected_findings"],
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "language": { "type": "string" },
          "framework": { "type": "string" },
          "expected_findings": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["vuln_class", "severity", "file", "line", "title"],
              "properties": {
                "vuln_class": { "type": "string" },
                "severity": {
                  "type": "string",
                  "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"]
                },
                "file": { "type": "string" },
                "line": { "type": "integer", "minimum": 1 },
                "title": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
