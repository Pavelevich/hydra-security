{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hydra-security.dev/evaluation/schemas/eval-report.schema.json",
  "title": "Hydra Evaluation Report",
  "type": "object",
  "required": ["generated_at", "dataset_id", "systems", "notes"],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "dataset_id": {
      "type": "string"
    },
    "systems": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["system_id", "repos", "totals"],
        "properties": {
          "system_id": {
            "type": "string"
          },
          "repos": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "repo_id",
                "tp",
                "fp",
                "fn",
                "expected_count",
                "predicted_count",
                "is_clean_control",
                "has_clean_fp",
                "precision",
                "recall"
              ],
              "properties": {
                "repo_id": { "type": "string" },
                "tp": { "type": "integer", "minimum": 0 },
                "fp": { "type": "integer", "minimum": 0 },
                "fn": { "type": "integer", "minimum": 0 },
                "expected_count": { "type": "integer", "minimum": 0 },
                "predicted_count": { "type": "integer", "minimum": 0 },
                "is_clean_control": { "type": "boolean" },
                "has_clean_fp": { "type": "boolean" },
                "precision": { "type": "number", "minimum": 0, "maximum": 1 },
                "recall": { "type": "number", "minimum": 0, "maximum": 1 }
              },
              "additionalProperties": false
            }
          },
          "totals": {
            "type": "object",
            "required": [
              "tp",
              "fp",
              "fn",
              "precision",
              "recall",
              "clean_repo_count",
              "clean_repo_fp_count",
              "clean_repo_fp_rate"
            ],
            "properties": {
              "tp": { "type": "integer", "minimum": 0 },
              "fp": { "type": "integer", "minimum": 0 },
              "fn": { "type": "integer", "minimum": 0 },
              "precision": { "type": "number", "minimum": 0, "maximum": 1 },
              "recall": { "type": "number", "minimum": 0, "maximum": 1 },
              "clean_repo_count": { "type": "integer", "minimum": 0 },
              "clean_repo_fp_count": { "type": "integer", "minimum": 0 },
              "clean_repo_fp_rate": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
